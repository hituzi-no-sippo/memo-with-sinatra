<% isAdd = @index.nil? %>
<form
  method='post'
  action='/memos/<%= isAdd ? 'new' : @index %>'
>
  <% unless isAdd %>
    <input type='hidden' name='_method' value='patch' />
  <% end %>
  <input
    type='text'
    name='title'
    value='<%= isAdd ? "" : @title %>'
    placeholder='タイトルを入力して下さい'
    autofocus
    required
  >
  <textarea
    name='body'
    placeholder='本文を入力して下さい'
  ><%= isAdd ? '' : @body %></textarea>
  <button type='submit'><%= isAdd ? '作成' : '更新' %></button>
</form>
