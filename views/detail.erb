<h2><%= @memo['title'] %></h2>
<% @memo['body'].to_s.split("\r\n").each do |str| %>
  <p><%= str %></p>
<% end %>
<div>
  <a href='/memos/<%= @index %>/edit'><button>編集</button></a>
  <form method='POST' action='/memos/<%= @index %>'>
    <input type='hidden' name='_method' value='delete' />
    <button>削除</button>
  </form>
</div>
